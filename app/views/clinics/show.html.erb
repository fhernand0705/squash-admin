<%= render 'edit' %>

<div class="profile-wrapper">
  <!-- CLINIC PROFILE CARD -->
  <div class="clinic-wrapper">
    <div class="clinic-card">
      <div class="row-card">
        <div class="column clinic-card-name"><h3><%= @clinic.name %></h3></div>
      </div>
      <hr class="hr-card">
      <div class="row-card">
        <div class="column">Status: Clinic</div>
      </div>
      <div class="row-card">
        <div class="column">Hours: <%= @clinic.hours %></div>
      </div>
      <div class="row-card">
        <div class="column">
          <button type="button" class="clinic-edit-btn" onclick="clinicOpen()">Edit</button>
          <%= link_to "Delete", @player, method: :delete,
                                         remote: true,
                                         class: "clinic-delete-btn",
                                         data: {confirm: 'are you sure?'} %>
        </div>
        <%= link_to "Back", clinics_path %>
      </div>
    </div>
  </div>
</div>

<script src="/assets/clinics.js"></script>
