<%= render 'new' %>

<div class="wrapper">
  <div class="row">
    <div class="column coaches-table-head">Coaches</div>
    <div class="column-6">
      <button type="button" class="add-coach-btn" onclick="coachOpen()">Add Coach</button>
    </div>
  </div>
   <% if @coach_all.present? %>
  <table class="coaches-table">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Salary</th>
      <th>Profile</th>
      <th>Remove</th>
    </tr>
    <% @coach_all.each do |c| %>
    <tr class="coach-trows" id="coach-<%= c.id %>">
      <td><%= link_to c.id, c %></td>
      <td><%= c.first_name %></td>
      <td><%= c.last_name %></td>
      <td><%= c.age %></td>
      <td><%= c.gender.capitalize %></td>
      <td><%= c.salary %></td>
      <td>
        <%= link_to coach_path(c.id) do %>
          <i class="fas fa-user"></i>
        <% end %>
      </td>
      <td>
        <%= link_to coach_path(c.id), method: :delete, data: {confirm: 'Are you sure you want to delete?', remote: true} do %>
          <i class="fas fa-user-times"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
    <% else %>
     <h1>NO COACHES FOUND...</h1>
    <% end %>
  </table>
</div>

<script src="/assets/coaches.js"></script>
