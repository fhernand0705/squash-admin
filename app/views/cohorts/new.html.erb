 <%= form_for @cohort do |f| %>
    <h1>Create New Cohort</h1>
    <label for="form">Name of Cohort</label><br>
      <%= f.text_field :name %><br>
    <label for="form">Start Date</label><br>
      <%= f.date_field :start_date %><br>
    <label for="form">End Date</label><br>
      <%= f.date_field :end_date %><br>
      <%= f.collection_check_boxes :player_ids,
                                   Player.all,
                                   :id,
                                   :player_full_name do |b| %>
      <div class="collection-check-box">
      <%= b.check_box %>
      <%= b.label %>
      </div>
  <% end %>

    <p>
      <%= f.submit "Create" %>
    </p>

<% end %>

<%= link_to 'Cancel', root_path %>
