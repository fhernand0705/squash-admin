<!-- COHORT (CREATE) MODAL -->

<div class="modal-container">
   <div id="cohort-modal">

     <div id="cohort-body">
        <h1 class="cohort-header">Create Cohort</h1>
        <hr class="hr-break-2">
     <div class="cohort-form">
        <%= form_for (@cohort) do |f| %>
        <label class="cohort-label" for="name">Name of Cohort</label><br>
        <%= f.text_field :name %><br>
        <label class="cohort-label" for="start_date">Start Date</label><br>
        <%= f.date_field :start_date %><br>
        <label class="cohort-label" for="end_date">End Date</label><br>
        <%= f.date_field :end_date %><br></br>
        <%= f.collection_select :clinic_id,
                                 Clinic.all,
                                :id,
                                :name,
                                {:prompt => '--Add Clinic--'},
                                class: "cohort-select-field" %><br>
        <%= f.collection_select :coach_id,
                                 Coach.all,
                                :id,
                                :coach_full_name,
                                {:prompt => '--Add Coach--'},
                                class: "cohort-select-field" %><br>
        <%= f.collection_select :player_ids,
                                 Player.all,
                                :id,
                                :player_full_name,
                                {:prompt => '--Add Player--'},
                                {:multiple => true,
                                 :class => "cohort-select-field"} %>
    </div><br>

    <div>
      <%= f.submit "Create", class: "cohort-submit-btn" %><br>
      <%= link_to 'Cancel', cohorts_path, class: "cancel-link-2" %>
    </div>
      <% end %>

  </div>
 </div>
</div>
