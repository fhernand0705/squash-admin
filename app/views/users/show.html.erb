<%= render 'edit' %>

<div class="profile-wrapper">
  <!-- PLAYER PROFILE CARD -->
  <div class="wrapper-card">
    <div class="player-card">
      <div class="row-card">
        <div class="column player-card-name"><h3><%= @user.user_name %></h3></div>
      </div>

      <hr class="hr-card">

      <div class="row-card">
        <div class="column">Email: <%= @user.email %></div>
      </div>

      <div class="row-card">
        <div class="column">
          <button type="button" class="edit-user-btn" onclick="userOpen()">Edit</button>
          <button><%= link_to "Delete", @user, method: :delete, data: {confirm: 'are you sure?', remote: true, class: "delete-user-btn"} %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/assets/users.js"></script>
