<%= render :partial => 'edit' %>

<div class="profile-wrapper">
  <!-- PLAYER PROFILE CARD -->
  <div class="user-wrapper">
    <div class="user-card">
      <div class="row-card">
        <div class="column user-card-name"><h3><%= @user.user_name %></h3></div>
      </div>

      <hr class="hr-card">

      <div class="row-card">
        <div class="column">Email: <%= @user.email %></div>
      </div>

      <div class="row-card">
        <div class="column">
          <button type="button" class="user-edit-btn" onclick="userOpen()">Edit</button>
          <%= link_to "DELETE", @user, method: :delete, class:"delete-user-btn", data: {confirm: 'are you sure?', remote: true} %>
        </div>
        <%= link_to "Back", '/' %>
      </div>
    </div>
  </div>
</div>

<script src="/assets/users.js"></script>
<link rel="stylesheet" href="/assets/users.css">
