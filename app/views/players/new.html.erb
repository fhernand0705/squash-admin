<button type="button" id="btn" onclick="modalOpen()">Trigger</button>

<div class="main-container">
  <div id="player-modal">

     <div class="player-body">
       <h2 class="player-header">
         Add New Player
       </h2>
       <hr class="hr-break-1">

       <div class="player-form">
         <%= form_for @player do |f| %>
         <label class="player-label" for="first_name">First Name</label><br>
         <%= f.text_field :first_name %><br>
         <label class="player-label" for="last_name">Last Name</label><br>
         <%= f.text_field :last_name %><br>
         <label class="player-label" for="age">Age</label><br>
         <%= f.number_field :age %><br></br>
         <%= f.select(:gender, ['--Sex--', 'Male', 'Female'], {}, {:class => "select-field"}) %><br>
         <%= f.collection_select  :cohort_ids,
                                   Cohort.all,
                                  :id,
                                  :name,
                                  {:prompt => '--Add Cohort--'}, {:class => "select-field"} %><br>
         <%= f.select(:education, ['--Highest Education--',
                                 'High School',
                                 'College',
                                 'Masters',
                                 'PHD'], {}, {:class => "select-field"}) %><br></br>
       </div>

       <div>
         <%= f.submit "Add Player", class: "player-btn" %><br>
         <%= link_to 'Cancel', root_path, class: "cancel-link" %>
       </div>
         <% end %>

  </div>
 </div>
</div>

<script src="/assets/players.js"></script>
