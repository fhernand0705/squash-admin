<div class="profile-wrapper">
  <!-- PLAYER PROFILE CARD -->
  <div class="wrapper-card">
    <div class="player-card">
      <div class="row-card">
        <div class="column player-card-name"><h3><%= @player.player_full_name %></h3></div>
      </div>
      <hr class="hr-card">
      <div class="row-card">
        <div class="column">Age: <%= @player.age %></div>
      </div>
      <div class="row-card">
        <div class="column">Gender: <%= @player.gender %></div>
      </div>
      <div class="row-card">
        <div class="column">Highest Education: <%= @player.education %></div>
      </div>
      <div class="row-card">
        <% @player.cohorts.each do |c| %>
          <div class="column">Cohort: <%= c.name %></div>
        <% end %>
      </div>
      <div class="row-card">
        <div class="column">
          <%= link_to "Edit", edit_cohort_path %>
          <%= link_to "Delete", @player, method: :delete,
          remote: true,
          data: {confirm: 'are you sure?'} %>
        </div>
      </div>
    </div>
  </div>
</div>
