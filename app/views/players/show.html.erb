<div class="main-panel">
  <div class="profile-wrapper">

  <!-- PLAYER PROFILE CARD -->
  <div class="wrapper-card">
    <div class="cohort-card">
      <div class="row-card">
        <div class="column cohort-card-name"><h3><%= @player.player_full_name %></h3></div>
      </div>
      <hr class="hr-card">
      <div class="row-card">
        <div class="column">
          Age: <%= @player.age %>
        </div>
      </div>
      <div class="row-card">
        <div class="column">Gender: <%= @player.gender %></div>
      </div>
      <div class="row-card">
        <div class="column">Highest Education: <%= @player.education %></div>
      </div>
      <div class="row-card">
        <div class="column">Cohort: <%= @player.cohorts.each do |c| %>
          <p><%= c.name %></p>
        </div>
      </div>
      <% end %>
      <div class="row-card">
        <div class="column">
          <%= link_to "Edit", edit_cohort_path %>
          <%= link_to "Delete", @player, method: :delete,
          remote: true,
          data: {confirm: 'are you sure?'} %>
        </div>
      </div>
     </div>
   </div>
  </div>
  </div>
